<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rec_view_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/rec_view_pub_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="end"
        android:text="@string/habr_view_pub_date"
        android:textAlignment="textEnd"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/rec_view_image"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/cl_image_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/nophoto" />

    <TextView
        android:id="@+id/rec_view_title"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:text="@string/cl_view_title"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <WebView
        android:id="@+id/rec_web_description"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
